/* pages/detail/detail.wxss */
/**/
page{
  background: #fff;
}
/*任务内容*/
.card{
  margin: 10rpx 40rpx 0 40rpx;
  border-top:4px solid #3DFFAD;
  box-shadow: 0rpx 6rpx 3rpx 2rpx rgb(228, 227, 227);
  padding: 0 0 10rpx 0;
}
.content{
  margin: 10rpx 40rpx 0 40rpx;
}
.title{
  font-size: 40rpx;
  font-weight: bolder;
}
.time{
  font-size: 30rpx;
  color: rgb(153, 150, 150);
  font-weight: bold;
}
.num{
  font-size: 30rpx;
}
.require{
  font-size: 26rpx;
}
/*完成情况*/
.table{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  border-top:2px dashed #3DFFAD;
  margin: 10rpx 40rpx 0rpx 40rpx;
}
.column{
  margin: 10rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.C{
  display: flex;
  font-size: 26rpx;
  margin:  0 0 5rpx 0;
}
/*表格中间竖分割线*/
.line{
  margin: 30rpx 0 0 0;
  border-right: 2rpx #eee solid; 
}
/*表格列标题*/
.tit{
  font-weight: bold;
  margin: 0 0 10rpx 0;
}
/* 添加按钮 */
.addbtn{
  height: 100rpx;
  width: 100rpx;
  background: #3DFFAD;
  border-radius: 50%;
  box-shadow: 0 0 2px 2px rgba(100, 100, 100,0.5);
  position:fixed;
  bottom: 10rpx;
  right: 10rpx;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 50px;
  transition: all 0.3s;
  z-index: 11;
}
/* 关闭按钮 */
.closebtn{
  transform: rotate(45deg);
}
/* 搜索背景 */
.searchback{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: absolute;
  top: 0;
}
/* 搜索框 */
.search{
  /* margin: 50rpx 0; */
  margin: 50rpx auto;
}
/* 手机号搜索框 */
.phone{
  border: 1px solid rgb(173, 173, 173);
  margin-right: 10rpx;
  margin-left: 80rpx;
  width: 60%;
  border-radius: 10rpx;
  display: inline-block;
  color: #fff;
}
/* 搜索按钮 */
.searchbtn{
  height: 50rpx;
  font-size: 12px; 
  /* width: 50rpx; */
  width: 110rpx;
  color: #000;
  background: #fff;
  display: inline-block;
}
/* 搜索出来的用户信息 */
.user{
  margin: auto;
  width: 78%;
  height: auto;
  background: #fff;
  color: #000;
  padding: 10rpx 0;
}
.detail{
  margin: 10rpx 20rpx;
}
.name,.age{
  display: inline;
}
/* 病人信息中的添加按钮 */
.adduser{
  height: 60rpx;
  width: 60rpx;
  background: #3DFFAD;
  color: #fff;
  font-size: 20px;
  float: right;
  margin: -80rpx auto;
  padding-left: 20rpx;
  transition: all 1s;
}
.added{
  background: rgb(75, 133, 109);
}